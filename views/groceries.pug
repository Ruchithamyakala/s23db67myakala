extends layout

block content
  h1= title
  -
    let results = [
      {
        "groceries_name": "chicken",
        "groceries_quantity": "4 lbs",
        "groceries_cost": 100
      },
      {
        "groceries_name": "Carrots",
        "groceries_quantity": "1.5 lbs",
        "groceries_cost": 200
      },
      {
        "groceries_name": "Cheese",
        "groceries_quantity": "9 oz",
        "groceries_cost": 300
      },                   
    ]
  div(class= "container-fluid")
    div(class = "row")
      each item in results
        - let destination = `dispatch("/groceries/update?id=${item._id}")`
          div(class= "col-sm-2") Name: #{item.groceries_name}
          div(class= "col-sm-2") Quantity: #{item.groceries_quantity}
          div(class= "col-sm-2") Cost: #{item.groceries_cost}
          button.btn( class="btn-primary ml-1", onclick= destination) Update
    script.
      function dispatch(path){
        window.location.href=path
      }